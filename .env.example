# PostgreSQL Database Configuration
# Database name for the application
POSTGRES_DB=myapp

# Database user (default: postgres)
POSTGRES_USER=postgres

# Database password (change this in production!)
POSTGRES_PASSWORD=your_secure_password_here

# Backend Configuration
# Full database connection string (format: postgresql://user:password@host:port/database)
DATABASE_URL=postgresql://postgres:your_secure_password_here@db:5432/myapp

# Database host (use 'db' for Docker Compose, 'localhost' for local development)
DB_HOST=db

# Database name (should match POSTGRES_DB)
DB_NAME=myapp

# Database user (should match POSTGRES_USER)
DB_USER=postgres

# Database password (should match POSTGRES_PASSWORD)
DB_PASSWORD=your_secure_password_here

# JWT Secret Key (generate a strong random key for production!)
# You can generate one using: openssl rand -hex 32
SECRET_KEY=your_super_secret_jwt_key_here

# CORS Origins - Comma-separated list of allowed origins
# Include all domains that will access your API
# Format: http://domain.com,https://domain.com,http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://frontend:3000,http://localhost:7000

# Frontend Configuration
# Backend API URL for frontend to connect to
# Use https:// in production, http:// for local development
VITE_API_URL=http://localhost:7000 